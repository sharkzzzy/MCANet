# check_original_labels.py
import numpy as np
from PIL import Image
import os

def check_label_values():
    """检查不同阶段的标签值"""
    
    # 检查原始标签
    original_lbl_path = '../dataset/orignlbl'  # 您处理后的标签
    current_lbl_path = 'dataset/train/lbl'     # 当前使用的标签
    
    print("=== 检查原始标签文件 ===")
    if os.path.exists(original_lbl_path):
        for i, filename in enumerate(os.listdir(original_lbl_path)[:5]):
            if filename.endswith('.tif') or filename.endswith('.png'):
                label = np.array(Image.open(os.path.join(original_lbl_path, filename)))
                unique_values = np.unique(label)
                print(f"{filename}: {unique_values}")
    
    print("\n=== 检查当前训练标签文件 ===")
    for i, filename in enumerate(os.listdir(current_lbl_path)[:5]):
        if filename.endswith('.tif') or filename.endswith('.png'):
            label = np.array(Image.open(os.path.join(current_lbl_path, filename)))
            unique_values = np.unique(label)
            print(f"{filename}: {unique_values}")

check_label_values()
